    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Demirk\\PhpDurationFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Demirk\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Amel Junuzović",
            "email": "maniaba@outlook.com"
        },
        {
            "name": "Demir Karić",
            "email": "demirkaric@hotmail.com"
        }
    ],
    "scripts": {
